<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="bmw" class="com.cognizant.spring.core.beans.Car">
		<property name="model" value="B M W"/>
		<property name="cost" value="6800000"/>
	</bean>
	

	<bean id="audi" class="com.cognizant.spring.core.beans.Car">
		<property name="model" value="Audi"/>
		<property name="cost" value="7500000.75"/>
	</bean>	
	
	<bean id="sanjay" class="com.cognizant.spring.core.beans.Customer">
		<constructor-arg value="Sanjay Patil"/>
		<constructor-arg ref="bmw"/>
	</bean>	
</beans>