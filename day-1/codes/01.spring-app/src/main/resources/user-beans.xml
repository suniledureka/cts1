<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!--  value as an element -->
	<bean id="user1" class="com.cognizant.spring.core.beans.User">
		<property name="firstName">
			<value>Sanjay</value>
		</property>
		<property name="lastName">
			<value>Patil</value>
		</property>		
	</bean>
	
	<!--  value as an attribute -->
	<bean id="user2" class="com.cognizant.spring.core.beans.User">	
		<property name="firstName" value="Sanjay"/>
		<property name="lastName" value="Patil"/>
	</bean>
	
	<!--  value through name-spaces -->
	<bean id="user3" class="com.cognizant.spring.core.beans.User" p:firstName="Sanjay" p:lastName="Patil"/>
	
	<bean id="user4" class="com.cognizant.spring.core.beans.User">
		<constructor-arg value="Sanjay"/>
		<constructor-arg value="Patil"/>
	</bean>
</beans>