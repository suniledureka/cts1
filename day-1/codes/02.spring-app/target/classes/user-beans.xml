<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="user1" class="com.cognizant.spring.core.beans.User" lazy-init="true" scope="prototype">	
		<property name="firstName" value="Sanjay"/>
		<property name="lastName" value="Patil"/>
	</bean>
	
	
	<bean id="user2" class="com.cognizant.spring.core.beans.User">
		<constructor-arg value="Manoj"/>
		<constructor-arg value="Kumar"/>
	</bean>
</beans>