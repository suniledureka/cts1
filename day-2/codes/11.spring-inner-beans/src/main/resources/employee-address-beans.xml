<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="emp" class="com.cognizant.spring.core.beans.Employee">
		<property name="employeeNo" value="1901"/>
		<property name="employeeName" value="Sunil Joseph"/>
		<property name="employeeAddress">
			<bean class="com.cognizant.spring.core.beans.Address" 
							p:street="Banjara Hills" 
							p:city="Hyderabad" 
							p:state="Telangana"/>
		</property>
	</bean>

</beans>
